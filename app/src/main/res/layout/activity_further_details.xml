<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:layout_gravity="center_horizontal"
    tools:context=".CountryViewActivity">

    <ImageView
        android:id="@+id/flagView"
        android:layout_width="152dp"
        android:layout_height="103dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/countryNameView"
        android:layout_width="168dp"
        android:layout_height="71dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="Country Name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/flagView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/flagView"
        app:layout_constraintTop_toTopOf="@+id/flagView" />

    <ImageView
        android:id="@+id/travelStatusImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/flagView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/flagView"
        app:layout_constraintTop_toBottomOf="@+id/flagView"
        app:layout_constraintVertical_bias="0.043"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

    <TextView
        android:id="@+id/travelStatusTextView"
        android:layout_width="228dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Avoid All Non-Essential Travel"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/travelStatusImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/travelStatusImageView"
        app:layout_constraintTop_toTopOf="@+id/travelStatusImageView"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/warningsRecyclerView"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:paddingLeft="25dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/travelStatusImageView"
        app:layout_constraintTop_toBottomOf="@+id/travelStatusImageView"
        app:layout_constraintVertical_bias="0.18"
        tools:itemCount="7" />

</androidx.constraintlayout.widget.ConstraintLayout>